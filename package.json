{
  "name": "node-testing",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server/bin/www",
    "watch": "nodemon ./server/bin/www",
    "dev": "webpack --config=./webpack.dev.js --progress --colors",
    "hot": "node ./dev-server.js",
    "prod": "webpack --config=./webpack.prod.js",
    "test": "npm run test:server_once && npm run test:client_once",
    "test:server": "npm run test:server_once -- --watch --timeout 90000",
    "test:server_once": "./node_modules/mocha/bin/mocha ./tests/server/**/*.js",
    "test:client": "karma start --config=./karma.conf.js",
    "test:client_once": "npm run test:client -- --single-run"
  },
  "dependencies": {
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "mongoose": "^5.0.10",
    "morgan": "~1.7.0",
    "pug": "~2.0.0-beta6",
    "serve-favicon": "~2.3.0",
    "webpack-cli": "^2.0.11",
    "~": "file:./server"
  },
  "devDependencies": {
    "karma": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^2.0.13",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.1",
    "supertest": "^3.0.0",
    "svelte": "^1.57.1",
    "svelte-loader": "^2.5.0",
    "webpack": "^4.1.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-merge": "^4.1.2"
  }
}
